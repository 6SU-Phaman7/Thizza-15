            0% { transform: scaleY(1); }
            100% { transform: scaleY(0.5); }
        }
        .correct #mouth {
            animation: none;
            transform: scaleY(1.2);
        }
        .wrong #mouth {
            animation: none;
            transform: scaleY(0.8);
        }
        .thinking #eye-left, .thinking #eye-right {
            animation: blink 2s infinite;
